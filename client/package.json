{
  "name": "timelogger-client",
  "version": "1.0.0",
  "description": "Time Logger Client is a React web frontend for a time management system",
  "author": "Alex Kwiatkowski",
  "license": "Copyright Alex Kwiatkowski 2020. All rights reserved.",
  "main": "index.tsx",
  "private": true,
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "^3.2.10",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "autosuggest-highlight": "^3.1.1",
    "date-fns": "^2.15.0",
    "hookrouter": "^1.2.3",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "typescript": "^3.9.7",
    "url-join": "^4.0.1"
  },
  "devDependencies": {
    "@types/autosuggest-highlight": "^3.1.0",
    "@types/hookrouter": "^2.2.3",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/url-join": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "test": "SKIP_PREFLIGHT_CHECK=true react-scripts test",
    "eject": "react-scripts eject",
    "pretty": "npx prettier --write ."
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-ignore": "off"
    },
    "overrides": [
      {
        "files": [
          "src/*.js",
          "src/*.ts"
        ],
        "excludedFiles": ".history/*"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
